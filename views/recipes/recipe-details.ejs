<main id="recipe-details" class="main row">
  <div id="upper" class="flex">
    <div id="recipe-image" class="<col-md-5></col-md-5> flex">
      <img src="/_images/recipes_images/<%=recipe.imagePath%>" alt="">
      <form id="meal-plan" action="/schedule-meal/<%=recipe._id%>" method="post">
        <label for="mealType">Meal:</label>
        <select class="form-control" id="mealType" name="mealType">
          <option value="breakfast">Breakfast</option>
          <option value="lunch">Lunch</option>
          <option value="dinner">Dinner</option>
          <option value="dessert">Dessert</option>
        </select>
        <label for="day">Day:</label>
        <select class="form-control" id="day" name="day">
          <option value="sunday">Sunday</option>
          <option value="monday">Monday</option>
          <option value="tuesday">Tuesday</option>
          <option value="wednesday">Wednesday</option>
          <option value="thursday">Thursday</option>
          <option value="friday">Friday</option>
          <option value="saturday">Saturday</option>
        </select>
        <button class="button-brown" type="submit" name="button"><span class="glyphicon glyphicon-plus"></span></button>
      </form>
    </div>
    <div id="ingredients" class="col-md-7">
      <h1><%=recipe.name%></h1>
      <h2>Ingredients</h2>
      <ul>
        <%recipe.ingredients.forEach((oneIngred)=>{%>
          <li><%=oneIngred%></li>
        <%});%>
      </ul>
    </div>
  </div>
  <div id="lower" class="col-md-12">
    <h2>Directions</h2>
    <ul>
      <%recipe.procedure.forEach((oneDirect)=>{%>
        <li><%-oneDirect-%></li>
      <%});%>
    </ul>
  </div>
</main>
